<MainScreen>:
    orientation: 'vertical'
    padding: 10
    spacing: 10

    Label:
        text: "Kiszállítási lista"
        font_size: '22sp'
        bold: True
        size_hint_y: None
        height: 50

    ScrollView:
        size_hint: (1, 0.6)
        do_scroll_x: False

        GridLayout:
            id: order_list
            cols: 1
            size_hint_y: None
            height: self.minimum_height
            row_default_height: 40
            row_force_default: True
            spacing: 5
            padding: 5

    BoxLayout:
        size_hint_y: None
        height: 50
        spacing: 10

        TextInput:
            id: barcode_input
            hint_text: "Olvasd be a termék vonalkódját"
            multiline: False

        Button:
            text: "Keresés"
            on_press: app.search_barcode()

    Button:
        text: "Rendeléslista frissítése"
        size_hint_y: None
        height: 45
        on_press: app.load_orders()

    Label:
        id: result_label
        text: ""
        size_hint_y: None
        height: 200
        color: (0.2, 0.6, 0.2, 1)
